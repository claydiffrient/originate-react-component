#!/bin/sh
mkdir -p dist
NODE_ENV=production node_modules/.bin/browserify lib/index.js \
  -t reactify \
  -t browserify-shim \
  -t envify \
  --detect-globals false \
  -s {{friendlyName}} > dist/{{name}}.js
node_modules/.bin/uglifyjs dist/{{name}}.js \
  --compress warnings=false > dist/{{name}}.min.js
